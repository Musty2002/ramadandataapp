{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "www.ramadandataapp.com.ng"
        }
      ],
      "destination": "/website",
      "permanent": false
    },
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "admin.ramadandataapp.com.ng"
        }
      ],
      "destination": "/admin",
      "permanent": true
    },
    {
      "source": "/:path((?!admin|assets).*)",
      "has": [
        {
          "type": "host",
          "value": "admin.ramadandataapp.com.ng"
        }
      ],
      "destination": "/admin",
      "permanent": false
    }
  ]
}
